<s:TagVisualization x:Class="SurfacePoker.PlayerTag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    Loaded="PlayerTag_Loaded">
    <Grid Height="50" Width="50" Background="{Binding WuerfelFarbe, ElementName=tagVisualization}" Margin="100,0,0,0">
        <StackPanel Orientation="Vertical" d:LayoutOverrides="Height">
            <TextBlock Text="Player"/>
            <TextBlock  Text="{Binding TagValue, ElementName=tagVisualization}" FontSize="26.667" TextAlignment="Center"  />
        </StackPanel>
    </Grid>
</s:TagVisualization>
